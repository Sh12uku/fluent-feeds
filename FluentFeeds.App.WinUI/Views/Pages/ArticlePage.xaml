<Page
	x:Class="FluentFeeds.App.WinUI.Views.Pages.ArticlePage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:vm="using:FluentFeeds.App.Shared.ViewModels.Pages"
	xmlns:controls="using:FluentFeeds.App.WinUI.Controls"
	mc:Ignorable="d"
	d:DataContext="{d:DesignInstance Type=vm:ArticleViewModel}"
	NavigationCacheMode="Required">

	<ScrollViewer HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
		<StackPanel Orientation="Vertical" Margin="16">
			<TextBlock
				Text="{x:Bind ViewModel.Title, Mode=OneWay}"
				Style="{StaticResource TitleTextBlockStyle}"
				IsTextSelectionEnabled="True" />
			
			<TextBlock
				Text="{x:Bind ViewModel.ItemInfo, Mode=OneWay}"
				Style="{StaticResource CaptionTextBlockStyle}"
				Foreground="{ThemeResource SystemControlForegroundBaseMediumLowBrush}"
				Margin="0,8,0,0"
				IsTextSelectionEnabled="True" />
			
			<controls:RichTextViewer
				RichText="{x:Bind ViewModel.Content, Mode=OneWay}"
				Margin="0,16,0,0" />
		</StackPanel>
	</ScrollViewer>
	
</Page>
